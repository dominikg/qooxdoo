// config.json based on attachment of bug#5100, by John Spackman
{
	"name" : "qxoo",

	"let" : {
		"SERVER_APPLICATION_MAIN_CLASS" : "${APPLICATION}.Native"
	},

	"jobs" : {
		"qxoo" : {
			"extend" : [ "cache" ],

			"library" : [ 
             	{
					"manifest" : "${QOOXDOO_PATH}/framework/Manifest.json"
				}, {
					"manifest" : "${ROOT}/Manifest.json"
				} 
			],

			"include" : [ 
	             "qx.Class", 
	             "qx.Mixin", 
	             "qx.Interface",
	             "qxootest.ServerInit",
	             "${SERVER_APPLICATION_MAIN_CLASS}"
            ],

			"exclude" : [ 
	              "qx.event.GlobalError"
            ],

			"environment" : {
				"qx.debug" : false,
				"qx.aspects" : false,
				"qx.globalErrorHandling" : false
			},

			"compile-options" : {
				"paths" : {
					"loader-template" : "oo.loader.tmpl.js"
				},
				"uris" : {
					"script" : ".",
					"resource" : "."
				}
			},
			
			"settings" : {
				"qx.application" : "${SERVER_APPLICATION_MAIN_CLASS}"
			}

		},

		"qxoo-build" : {
			"extend" : [ "qxoo" ],

			"compile-options" : {
				"paths" : {
					"file" : "${ROOT}/build/script/qx-oo.js"
				},
				"code" : {
					"format" : true,
					"optimize" : [ "variables", "basecalls", "privates", "strings" ]
				}
			},
			
			"compile" : {
				"type" : "build"
			}
		},

		"qxoo-noopt" : {
			"extend" : [ "qxoo" ],

			"compile-options" : {
				"paths" : {
					"file" : "${ROOT}/build/script/qx-oo.js"
				},
				"code" : {
					"format" : true,
					"optimize" : []
				}
			},
			
			"compile" : {
				"type" : "build"
			}
		},
		
		"qxoo-source" : {
			"extend" : [ "qxoo" ],

			"compile-options" : {
				"paths" : {
					"file" : "${ROOT}/source/script/qx-oo.js"
				},
				"code" : {
					"format" : true,
					"optimize" : []
				}
			},

			"compile" : {
				"type" : "source"
			},

			"environment" : {
				"qx.debug" : true
			}
		}
	}
}
